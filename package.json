{
  "name": "sheetmetal.io",
  "version": "00.00.01",
  "description": "Turn a Google Sheet into an API",
  "main": "./server",
  "scripts": {
    "build": "next build",
    "deploy": "next build && gcloud app deploy --quiet",
    "dev": "node server",
    "migrate": "node-pg-migrate -m ./db/migrations -f ./db/config.js",
    "pretty": "prettier --write \"./**/*.{js,json,yml,md,vue,css,scss}\"",
    "start": "NODE_ENV=production node server"
  },
  "dependencies": {
    "@zeit/next-sass": "^1.0.1",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "bulma": "^0.7.1",
    "cookie-parser": "^1.4.4",
    "dotenv": "^6.2.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.16.4",
    "js-cookie": "^2.2.0",
    "jsonwebtoken": "^8.5.0",
    "next": "^7.0.2",
    "node-sass": "^4.11.0",
    "pg": "^7.8.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-toastify": "^4.5.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "husky": "^1.2.1",
    "node-pg-migrate": "^3.18.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
